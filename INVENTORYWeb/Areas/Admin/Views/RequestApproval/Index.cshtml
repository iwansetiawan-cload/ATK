@{
    var status = Context.Request.Query["status"];
    var title = "List Permintaan Barang";
    var waitingApproval = "btn-primary btn-outline-primary waves-light";
    var approval = "btn-primary btn-outline-primary waves-light";   
    var completed = "btn-primary btn-outline-primary waves-light";

    switch (status)
    {
        case "completed":
            completed = "btn-primary btn-outline-inverse waves-light active";
            break;
        case "approval":
            approval = "btn-primary btn-outline-inverse waves-light active";
            break;     
        default:
            waitingApproval = "btn-primary btn-outline-inverse waves-light active";
            break;
    }
}


<div class="pcoded-content">
    <div class="page-header">
        <div class="page-block">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="page-header-title">
                        <h5 class="m-b-10">Transaksi</h5>
                        <p class="m-b-0">@title</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="page-footer-title text-right">
                        <h4 class="m-b-0"><a href="/" class="text-white">Help</a> </h4>
                    </div>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action=""> <i class="fa fa-home"></i></a></li>
                        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Category" asp-action="">Home</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="pcoded-inner-content">
        <!-- Main-body start -->
        <div class="main-body">
            <div class="page-wrapper">
                <!-- Page body start -->
                <div class="page-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card">
                                <div class="card-header">
                                    <h5>List Process Approval</h5>
                                    <div class="dropdown-secondary dropdown f-right">
                                        <div class="btn-group " role="group" data-toggle="tooltip" data-placement="top" title="">
                                            <a class="btn @waitingApproval" asp-controller="RequestApproval" asp-action="Index" asp-route-status="waitingApproval">Waiting Approve</a>
                                            <a class="btn @approval" asp-controller="RequestApproval" asp-action="Index" asp-route-status="approval">Approved/ Rejected</a>
                                            <a class="btn @completed" asp-controller="RequestApproval" asp-action="Index" asp-route-status="completed">Completed</a>
                                        </div>
                                    </div>
                               
                                </div>
                                <div class="card-block">

                                    <div class="dt-responsive table-responsive">
                                        <table id="tblData" class="table table-striped table-bordered nowrap">
                                            <thead>
                                                <tr>
                                                    <th>No Transaksi</th>
                                                    <th>Nama Proyek</th>
                                                    <th>Tanggal Permintaan</th>
                                                    <th>Keterangan</th>
                                                    <th>Status</th>
                                                    <th style="min-width:10px"></th>
                                                </tr>
                                            </thead>

                                        </table>
                                    </div>


                                </div>
                            </div>
                        </div>
                        <!-- Page body end -->
                    </div>

                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {

    <script src="~/js/index_request_approval2.js"></script>
}